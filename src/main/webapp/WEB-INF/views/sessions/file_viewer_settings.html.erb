<%= content_for :page_title do %>
  File Viewer Settings
<% end %>

<div class="page-header">
  <h1> Automatic File Viewer Settings </h1>
</div>

<%= form_with url: file_viewer_settings_path(return_url: params[:return_url]), method: :post do |form| %>
  <div class="form-group">
    <%= form.label "When there are multiple files, pick a file containing this in the name if possible:" %>
    <%= form.text_field :filter, class: "form-control", value: session[:file_viewer_filter] %>
  </div>

  <%= form.submit "Save", class: "btn btn-primary" %>
<% end %>