<li><%= link_to 'Classes', klasses_path %></li>

<% n = NIL %>
<% if assigned.klass.course %>
  <% n = assigned.klass.course.course_code+" "+assigned.klass.course.title+": "+assigned.klass.semester+" "+assigned.klass.section.to_s %>
<% else %>
  <% n = "Untitled Class" %>
<% end %>

<% dest = NIL %>
<% if assigned.klass.is_class_admin?(current_user) %> 
  <li><%= link_to n, klass_assignments_path(assigned.klass) %></li>
  <li><%= assigned.assignment.title %></li>
<% else %>
  <li><%= link_to n, assigned.klass %></li>
  <li><%= assigned.assignment.title %></li>
<% end %>