<%= content_for :page_title do %>
  Create Account
<% end %>

<h1> Kit Account Creation </h1>

Welcome to Kit! To create your account, please fill in the following and click "Submit".

<%= form_with(model: @user, url: accept_user_invite_path(@user), method: :post) do |form| %>

  <div class="form-group">
    <%= form.hidden_field :token, value: params[:token], class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label "First Name (as registered)" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label "Last Name" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label "Preferred Name/Nickname (optional- for those who do not go by their full first name)" %>
    <%= form.text_field :preferred_name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label "Password" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label "Confirm Password" %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>
  
  <%= form.submit "Create Account", class: "btn btn-success" %>
<% end %>