<% if submission.assigned.assignment.assignment_type == "student_file" || submission.assigned.assignment.assignment_type == "student_repo" %>
  <% if submission.turned_in? %>
    <% if submission.get_time_turned_in > submission.get_due_date %>
	  <% ov = submission.get_time_turned_in - submission.get_due_date %>
	  <span style="color:red">
	    <%= (ov/(60*60*24)).floor %>d 
	    <%= ((ov/(60*60))%24).floor %>h
	    <%= ((ov/(60))%60).floor %>m  
	    <%= (ov%(60)).floor %>s Late
	  </span>
    <% else %>
	  <span style="color:green">On Time</span>
    <% end %>
  <% else %>
    <span style="color:orange">Started, Not Turned In</span>
  <% end %>
<% end %>