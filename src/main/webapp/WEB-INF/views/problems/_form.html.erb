<%= form_with(model: problem, url: [@assignment,problem], local: true) do |form| %>
  <% if problem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(problem.errors.count, "error") %> prohibited this problem from being saved:</h2>

      <ul>
      <% problem.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :points %>
    <%= form.number_field :points, step: :any, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Grader Notes (visible only to grader, will show simple HTML formatting):" %>
    <%= form.text_area :grader_notes, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
